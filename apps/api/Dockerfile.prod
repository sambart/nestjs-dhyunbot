FROM node:20-alpine AS builder

WORKDIR /workspace

# Copy root package.json
COPY package*.json ./
COPY tsconfig.json ./

# Copy workspace package.json files
COPY apps/api/package*.json ./apps/api/
COPY libs/shared/package*.json ./libs/shared/

# Install dependencies
RUN npm install

# Copy shared library and build
COPY libs/shared ./libs/shared
RUN npm run build --workspace=@dhyunbot/shared

# Copy API source and build
COPY apps/api ./apps/api
WORKDIR /workspace/apps/api
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /workspace

# Copy root package.json
COPY package*.json ./

# Copy workspace package.json files
COPY apps/api/package*.json ./apps/api/
COPY libs/shared/package*.json ./libs/shared/

# Install only production dependencies
RUN npm install --omit=dev

# Copy built shared library
COPY --from=builder /workspace/libs/shared/dist ./libs/shared/dist
COPY --from=builder /workspace/libs/shared/package.json ./libs/shared/

# Copy built API
COPY --from=builder /workspace/apps/api/dist ./apps/api/dist
COPY --from=builder /workspace/apps/api/package.json ./apps/api/

WORKDIR /workspace/apps/api

EXPOSE 3000

CMD ["node", "dist/main.js"]
